.recommendContainer
   width 100%
   height 100%
  .title
    width 100%
    height 107px
    display block
    text-align center
    line-height 107px
    vertical-align middle
    font-size 28px
    letter-spacing 0
    color #333
  .itemWrap
    width calc(100%-20px)
    height 280px
    margin  0 20px
    border 1px solid #d9d9d9
    img
      display inline-block
      width 280px
      height 280px
      float left
    .item-right
      float right
      height 100%
      margin-right 70px
      display flex
      justify-content center
      flex-direction column
      align-items flex-start
      line-height 36px
  .goods
     width 100%
     height 100%
     margin-top 20px
     ul
       li
        display flex
	    	flex-wrap nowrap 
        .goodItem
          display block
          img
            width 345px
            height 345px